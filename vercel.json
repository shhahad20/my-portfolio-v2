{
    "version": 2,
    "builds": [
      {
        "src": "backend/dist/api/index.js",
        "use": "@vercel/node",
        "config": { "includeFiles": ["dist/api/**"] }
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/dist/api/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/dist/$1"
      }
    ]
  }
  